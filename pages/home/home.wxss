/* pages/home/home.wxss */
page{
  color: #333;
  background: #f2f2f2;
}

/*滑块*/
swiper{
  height: 400rpx;
}

swiper image{
  width: 100%;
  height: 100%;
}

/*功能区选项卡*/
.wrap{
  background-color: white;
  box-shadow: 1px 2px 3px #d9d9d9;
}

.topTab{
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.topTab view{
  width: 22%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.topTab view image{
  width: 100rpx;
  height: 100rpx;
}

.topTab view text{
  font-size: 28rpx;
}

/*热门区域*/
.centerblank{
  width: 100%;
  height: 40rpx;
  background-color: #e4e4e4;
}

.hotSelf{
  height: 550rpx;
}


.titleWrap{
  height: 44rpx;
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.titleWrap text:first-child{
  border-left: 10rpx #1392db solid;
}

movable-area{
  width: 100%;
  height: 500rpx;
}

movable-view{
  width: 290%;
  height: 430rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.hotSelf_cont image{
  width: 500rpx;
  height: 300rpx;
  border-radius: 6%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.hotSelf_cont view{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}