/* pages/list/list.wxss */
page{
  background-color: whitesmoke;
}

.top{
  width: 710rpx;
  height: 80rpx;
  border:20rpx solid skyblue;
  display: flex;
  justify-content: center;
  align-items: center;
}

.middle{
  width: 100%;
  height: 80rpx;
  background-color: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.middle image{
  height: 50rpx;
  width: 50rpx;
}

.item{
  display: flex;
  align-items: center;
  height: 150rpx;
}

.item image{
  margin: 0 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 6%;
}

.item view{
  margin: 0 100rpx;
  display: flex;
  flex-direction: column;
}
